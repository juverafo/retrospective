<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Retrospective{% endblock %}</title>

    <link href="{{ asset('css/tabulator.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% if app.session.flashBag.has('success') %}
    <div class="alert alert-success mt-3">
        {{ app.session.flashBag.get('success')|first }}
    </div>
{% endif %}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{path('home')}}">Retrospective</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{path('home')}}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('feedback') }}">Feedback</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="navbar-collapse collapse w-400 order-3 dual-collapse2">
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
{#                <li class="nav-item"><a class="nav-link btn btn-warning" href="{{path('profile', {id: app.user.id})}}">Profil</a></li>#}
                <li class="nav-item"><a class="nav-link btn btn-warning" href="{{ path('app_logout') }}">DÃ©connexion</a></li>
            {% else %}
                <li class="nav-item"><a class="nav-link btn btn-warning" href="{{ path('app_login') }}">Connexion</a></li>
                <li class="nav-item"><a class="nav-link btn btn-info" href="{{ path('app_register') }}">Inscription</a></li>
            {% endif %}
        </ul>
    </div>
</nav>
{% block body %}{% endblock %}

<script src="{{ asset('js/jquery-3.7.1.js') }}"></script>
<script src="{{ asset('js/tabulator.min.js') }}"></script>
<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('js/feedback.js') }}"></script>
<script src="{{ asset('js/home.js') }}"></script>

</body>
</html>
