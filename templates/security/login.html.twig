{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post">
        <div class="container container-fluid my-3">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

            <div class="row mb-3">
                <div class="col-2 col-form-label mt-1">
                    <label for="inputEmail" class="form-label">Email</label>
                </div>
                <div class="col-9">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-2 col-form-label mt-1">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                </div>
                <div class="col-9">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="row mb-3">
                <div class="col-2 col-form-label mt-1"></div>
                <div class="col-9">
                    <div class="form-check">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMeCheckbox">
                        <label class="form-check-label" for="rememberMeCheckbox">Me souvenir</label>
                    </div>
                </div>
            </div>
             <button class="btn btn-primary" type="submit">Se connecter</button>
        </div>
    </form>
{% endblock %}
